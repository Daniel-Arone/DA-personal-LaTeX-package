\node[fill=#3, rectangle, inner sep=10pt, ultra thick, draw=#4, rounded corners] (box) \bgroup
\begin{minipage}{0.75\textwidth}
\textbf{#2 \thesection.\thetheorem. \  #1}

\medskip}{%
\end{minipage}
\egroup;
\end{tikzpicture}
\end{center}}

